<h1>Eat Da Burger!</h1>


<ul>
    {{#each burger_name}}
    {{#unless this.devoured}}
    <p>{{this.burger_name}}</p>
    <button class="devour" value={{this.id}}>Devour</button>
    {{!--{{> burgers/burger-block devoured=true}} --}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers you devoured!</h2>

<ul>
    {{#each burger_name}}
    {{#if devoured}}
    {{!-- {{> burgers/burger-block devoured=false}} --}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>
    <button type="submit">Add Burger</button>
</form>